<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.education.schoolapp.ProfileScrollingActivity"
    tools:showIn="@layout/activity_profile_scrolling">

    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin" android:text="@string/large_text" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fafafa"
            android:elevation="4dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Name"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/actual_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text"
                android:layout_marginTop="10dp"
                android:alpha="0.9"
                android:text="Rizwana"
                android:textSize="24dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/class_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/class_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Class"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_text"
                    android:alpha="0.9"
                    android:text="Nursery"
                    android:textSize="24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Section"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_text"
                    android:alpha="0.9"
                    android:text="A"
                    android:textSize="24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blood_group_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/blood_group_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Blood Group"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_blood_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/blood_group_text"
                    android:alpha="0.9"
                    android:text="O+ve"
                    android:textSize="24dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hobbies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fafafa"
            android:elevation="4dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/hobbies_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Hobbies"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/actual_hobbies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hobbies_name"
                android:alpha="0.9"
                android:maxLines="2"
                android:text="Dancing, Playing with LEGO blocks"
                android:textSize="24dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/father_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/father_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Father"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_father_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/father_text"
                    android:alpha="0.9"
                    android:text="Amir"
                    android:textSize="24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mother_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mother_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Mother"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_mother_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mother_text"
                    android:alpha="0.9"
                    android:text="Ruhina"
                    android:textSize="24dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/guardian_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/guardian_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Guardian"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_guardian_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guardian_text"
                    android:alpha="0.9"
                    android:text="Rehan"
                    android:textSize="24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/teacher_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="#fafafa"
                android:elevation="4dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/teacher_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Teacher"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actual_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teacher_text"
                    android:alpha="0.9"
                    android:text="@string/teacher_name"
                    android:textSize="24dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
